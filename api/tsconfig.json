{
  "compilerOptions": {
    "outDir": "./build/lib",
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".."
  },
  "include": [
    "."
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}